<div class="invoice-details">
	<table>
		<tr class="large">
			<td style="width: 80px;"><label>Para</label></td>
			<td><%= autocomplete_field_tag "company_name",'', autocomplete_company_name_invoices_path, :id_element => '#invoice_company_id' %></td>
			<!-- <%= display_input_or_value_for(f, :company_id) %> -->
			<%= f.hidden_field :company_id %>
		</tr>
		<tr class="large">
			<td style="width: 80px;"><label>Asunto</label></td>
			<%= display_input_or_value_for(f, :subject) %>
		</tr>
	</table>
	<table>
		<tr class="small">
			<td  style="width: 70px;"><label>NÃºmero</label></td>
			<%= display_input_or_value_for(f, :suggested_number) %>
			<td><label>Fecha</label></td>
			<td><%= f.text_field :open_date, :data => {"date-format" => "dd/mm/yyyy"} %></td>
			<td><label>Vencimiento</label></td>
			<%= display_input_or_value_for(f, :due_date) %>
		</tr>
	</table>
	<% unless params[:action] == "show" %>
		<table>
			<tr class="small">
				<td  style="width: 80px; padding-top: 10px;"><label>Moneda</label></td>
				<td style="padding-top: 10px; width: 150px;">
					<%= display_select_or_value_for(f, :currency, Invoice.currencies) %>
				</td>
				<td style="padding-top: 10px; width: 45px">
					<label>IVA</label>
				</td>
				<td style="padding-top: 10px;">
					<%= display_select_or_value_for(f, :taxed,[["Si", true],["No", false]]) %>
				</td>
			
			</tr>
		</table>
	<% end %>
</div>