<div class="invoice-details row" style="padding-left: 15px;">
	<div class="span3 pull-right" style="margin-top: 10px; margin-right: 15px;">
		<ul class="unstyled" style="font-size: 15px">
			<li style="text-align: right;">
				<span class="draft">Emitida el <%= I18n.l @invoice.active_date, format: :dd_MM_yy %></span>
			</li>
			<li style="text-align: right;">
				<% if @invoice.is_due? %>
					<span class="due ">Atrasada <%= @invoice.late_days %> d√≠as</span>
				<% elsif @invoice.closed? %>
					<span class="closed">Pagada el <%= I18n.l @invoice.close_date, format: :dd_MM_yy %></span>
				<% else %>
					Vence <%= I18n.l @invoice.due_date, format: :dd_MM_yy %>
				<% end %>
			</li>
		</ul>
	</div>
	<div class="span5">
		<h4 class="invoice-customer">
			<%= link_to @invoice.company_name, company_path(@invoice.company) %>
			<br>
			<small style="color: #444"><%= @invoice.subject %></small>
		</h4>
		<div class="tags">
			<span class="label" style="background: white; color: #666; border: #999 solid 1px;">Productos</span>
			<span class="label" style="background: white; color: #666; border: #999 solid 1px;">Soportes</span>
		</div>
	</div>
</div>



