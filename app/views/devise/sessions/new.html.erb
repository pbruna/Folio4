<div id="login-box">
	<h2>Ingreso a Folio</h2>
	<% flash.each do |name, msg| %>        
        <div class="alert alert-error">
        	<a class="close" data-dismiss="alert">×</a>
        	<%= msg %>
      	</div>                
	<% end %>
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "login-form form-vertical"}) do |f| %>
	  <div class="inputs">
		<div class="control-group">
	    <%= f.input :email, :required => false, :autofocus => true, :label => false, :input_html => {:class => "login-field"}, :placeholder => "Email" %>
	     </div>
		<div class="control-group">
	   	<%= f.input :password, :required => false, :label => false, :input_html => {:class => "login-field"}, :placeholder => 	"Contraseña" %>
		</div>
	  </div>

	  <div class="actions">
	    <%= f.button :submit, "Ingresar", :class => "btn btn-primary btn-large btn-block" %>
	  </div>
	<% end %>

	 <%= link_to "Olvidó su contraseña?", new_password_path(resource_name) %><br />
</div>